generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  name      String?
  games     Game[]
}

model Game {
  id          Int      @id @default(autoincrement())
  nome        String
  dificuldade Int
  prioridade  Int
  terminado   Boolean  @default(false)
  criadoEm    DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}